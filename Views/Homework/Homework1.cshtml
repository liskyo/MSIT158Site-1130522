
@{
    ViewData["Title"] = "Homework1";
}

<h1>Homework1</h1>
<div id="cardContainer" class="row row-cols-md-3 g-4"></div>


@section Scripts{
    <script src="~/js/travel.js"></script>
    <script>
        const cardContainer = document.querySelector('#cardContainer');
        let string = "";

            spots.CommonFormat.Section.forEach((item) => {
                const imgsrc = (item.file && item.file.img && item.file.img[0] && item.file.img[0].text) ? item.file.img[0].text : '沒有照片顯示';
                string += `
                            <div class="col">
                                <div class="card h-100">
                                    <img src="${imgsrc}" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">${item.stitle}</h5>
                                        <p class="card-text">${item.xbody.substring(0, 50)}...</p>
                                    </div>
                                </div>
                            </div>
                        `;
            });

            cardContainer.innerHTML = string;
    </script>
}

